  <script>
    // Animated NASA-style stars
    const c = document.querySelector('.stars');
    const ctx = c.getContext('2d');
    let w = window.innerWidth, h = window.innerHeight;
    c.width = w; c.height = h;
    const stars = Array.from({length: 200}, () => ({
      x: Math.random() * w,
      y: Math.random() * h,
      r: Math.random() * 1.8 + 0.5,
      o: Math.random() * 0.5 + 0.5,
      twinkle: Math.random() * 100
    }));
    function drawStars() {
      ctx.clearRect(0,0,w,h);
      stars.forEach(star => {
        ctx.globalAlpha = star.o + Math.sin(Date.now()/800 + star.twinkle) * 0.2;
        ctx.beginPath();
        ctx.arc(star.x, star.y, star.r, 0, 2 * Math.PI);
        ctx.fillStyle = '#fff';
        ctx.shadowColor = '#00aaff';
        ctx.shadowBlur = 8;
        ctx.fill();
        ctx.shadowBlur = 0;
      });
      requestAnimationFrame(drawStars);
    }
    drawStars();
    window.addEventListener('resize', () => {
      w = window.innerWidth; h = window.innerHeight;
      c.width = w; c.height = h;
    });

    let currentLang = 'en';
    function toggleLanguage() {
      currentLang = currentLang === 'en' ? 'ar' : 'en';
      document.body.setAttribute('lang', currentLang);
      updateContent();
    }
    function updateContent() {
      const elements = document.querySelectorAll('[data-en]');
      elements.forEach(element => {
        const content = element.getAttribute(`data-${currentLang}`);
        if (content) element.innerHTML = content;
      });
      document.querySelectorAll('input[data-en-placeholder]').forEach(input => {
        input.placeholder = input.getAttribute(`data-${currentLang}-placeholder`);
      });
    }
    function toggleChat() {
      const chatbot = document.getElementById('chatbot');
      const chatToggle = document.querySelector('.chat-toggle');
      chatbot.style.display = chatbot.style.display === 'none' ? 'block' : 'none';
      chatToggle.style.display = chatbot.style.display === 'none' ? 'block' : 'none';
    }
    function addMessage(message, isUser = false) {
      const chatBody = document.getElementById('chat-body');
      const messageDiv = document.createElement('div');
      messageDiv.style.margin = '10px';
      messageDiv.style.padding = '10px';
      messageDiv.style.borderRadius = '10px';
      messageDiv.style.maxWidth = '80%';
      messageDiv.style.wordWrap = 'break-word';
      if (isUser) {
        messageDiv.style.marginLeft = currentLang === 'ar' ? '0' : 'auto';
        messageDiv.style.marginRight = currentLang === 'ar' ? 'auto' : '0';
        messageDiv.style.backgroundColor = '#00aaff';
        messageDiv.style.color = 'white';
      } else {
        messageDiv.style.backgroundColor = '#243756';
        messageDiv.style.color = '#d0d0d0';
      }
      messageDiv.textContent = message;
      chatBody.appendChild(messageDiv);
      chatBody.scrollTop = chatBody.scrollHeight;
    }
    function handleKeyPress(event) {
      if (event.key === 'Enter') {
        const input = document.getElementById('chat-input');
        const message = input.value.trim();
        if (message) {
          addMessage(message, true);
          input.value = '';
          setTimeout(() => {
            const responses = {
